; -- widget presenting a wide variety of information i.e.
; ---- a. basic textclock
; ---- b. date, without current year for aesthetics and so it takes less space
; ---- c. weather i.e. temperature and weather in the form of an icon
; ------ (.config/eww/bars/main/weather)
(defwidget clock-date-weather-dock []
  (box :class "clock-date-weather containers"
    (box :class "datebox"
          :orientation "v"
          :spacing 0
          :space-evenly false
          :valign "center"
          :halign "start"
          :vexpand false
          :hexpand false
        (button :class "time"
                :halign "start"
                :wrap true
                :onclick 'scripts/toggle_calendar'
                time)
        (button :class "date"
                :wrap true
                :onclick 'scripts/toggle_calendar'
                date))
    (box :class "weatherbox"
          :orientation "h"
          :spacing 0
          :space-evenly false
          :halign "end"
          :vexpand false
          :hexpand false
        (label :class "weathertemp"
                :text "${wtemp}°C  ")
        (label :class "weathericon"
                :style "color: ${wcolour};"
                :text "${wicon}"))))

; -- version of clock-date-weather-dock without weather
(defwidget clock-date-dock []
  (box :class "clock-date containers"
    (box :class "datebox"
          :orientation "v"
          :spacing 0
          :space-evenly false
          :valign "center"
          :halign "start"
          :vexpand false
          :hexpand false
        (button :class "time"
                :halign "start"
                :wrap true
                time)
        (button :class "date"
                :halign "start"
                :wrap true
                date))))

(defwidget weather-dock []
  (box :class "clock-date-weather containers"
    (box :class "weatherbox"
          :orientation "h"
          :spacing 0
          :space-evenly false
          :halign "center"
          :vexpand false
          :hexpand true
        (label :class "weathertemp"
                :halign "start"
                :text "${wtemp}°C")
        (label :class "weathericon"
                :style "color: ${wcolour};"
                :text "${wicon}"))))

; -- protype of a popup widget, which appears after clicking the textclock or the date
; ---- ! for now unfuntional
(defwidget calendardock []
  (box :class "calendardock containers"))
