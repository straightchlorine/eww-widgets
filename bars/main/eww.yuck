; ------------ widgets ------------ ;

; -- workspace widget, depends on .yuck generating script 
; ---- (.config/eww/bars/main/spaces)
(defwidget workspaces []
  (box :class "workspaces containers"
        :orientation "h"
        :space-evenly false
        :halign "start"
        :valign "center"
    (literal :content spaces)))
(deflisten spaces "scripts/spaces")

; -- system info widget
; ---- (.config/eww/bars/main/sysinfo)
(defwidget info []
  (box :class "resources containers"
        (centerbox :orientation "h"
          (box :class "resource-div"
                :orientation "h"
                :valign "center"
                :halign "center"
                :space-evenly false
            (label :class "resource-text"
                    :orientation "h"
                    :valign "center"
                    :halign "center"
                    :text " ${cpu}%"))
          (box :class "resource-div"
                :orientation "h"
                :valign "center"
                :halign "center"
                :space-evenly false
              (label :class "resource-text"
                      :valign "center"
                      :halign "center"
                      :text  " ${mem}%"))
          (box :class "resource-div"
                :orientation "h"
                :valign "center"
                :halign "center"
                :space-evenly false
              (label :class "resource-text"
                      :valign "center"
                      :halign "center"
                      :text " ${sda}%")))))

